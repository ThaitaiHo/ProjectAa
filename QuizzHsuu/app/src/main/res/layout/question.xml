<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAF982"
    >
    <TextView
        android:id="@+id/TxtCauhoi"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <RadioGroup
        android:id="@+id/RadioGroupTraloi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/TxtCauhoi"
        android:padding="10dp"
        >
        <RadioButton
            android:id="@+id/RdbA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A. "
            android:textSize="25dp"
            android:padding="10dp"
            />
        <RadioButton
            android:id="@+id/RdbB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="B. "
            android:textSize="25dp"
            android:padding="10dp"
            />
        <RadioButton
            android:id="@+id/RdbC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="C. "
            android:textSize="25dp"
            android:padding="10dp"
            />
        <RadioButton
            android:id="@+id/RdbD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="D. "
            android:textSize="25dp"
            android:padding="10dp"
            />
    </RadioGroup>

    <Button
        android:id="@+id/btn_traloi"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RadioGroupTraloi"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="27dp"
        android:foreground="@drawable/continute"
        android:text="Trả lời"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/TxtKetqua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_below="@+id/btn_traloi"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
    />

    <Button
        android:id="@+id/pre_btn"
        android:layout_width="176dp"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="186dp"
        android:layout_toStartOf="@+id/btn_traloi"
        android:foreground="@drawable/previous"
        android:text="Previous"
        android:textSize="23dp" />
</RelativeLayout>